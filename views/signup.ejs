<%- include('./includes/head.ejs') %>
</head>
<body>
    <div>
        <form action='/auth/signup' method='POST' class='my-3 container card w-50 p-3 h-50 d-flex justify-content-center' >
            <h4 class='my-3' style="text-align: center">Signup</h4>
            <div class="form-group">
                <label for="name" class='my-1'>Name</label>
                <input type="text" name="name" class="form-control my-1" id="name" value="<%= oldInput.name %>" placeholder="Enter Name" />
            </div>
            <div class="form-group">
                <label for="email" class='my-1'>Email</label>
                <input type="email" name="email" class="form-control my-1" id="email" value="<%= oldInput.email %>" placeholder="Enter Email" />
            </div>
            <div class="form-group">
                <label for="password" class='my-1'>Password</label>
                <input type="password" name="password" class="form-control my-1" id="password" value="<%= oldInput.password %>" placeholder="Enter Password" />
            </div>
            <div class="form-group">
                <label for="confirmPassword" class='my-1'>Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control my-1" id="confirmPassword" value="<%= oldInput.confirmPassword %>" placeholder="Enter Confirm Password" />
            </div>
            <!-- <input type="hidden" name="_csrf" value="<%= //csrfToken %>"> -->
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Signup" class="btn btn-primary  my-1" />
            </div>
            
        </form>


        <div class="text-center">
            <p>Already a member? <a href="/auth/login">Login</a></p>
        </div>
    </div>
<%- include('./includes/end.ejs') %>
