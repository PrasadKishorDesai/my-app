<%- include('./includes/head.ejs')  %>
</head>
<body>
    <div>
        
        <%- include('./includes/nav.ejs')  %>

        <div class='container'>
            <h4 class='my-3' style="text-align:center">Add Student</h4>
            <form action="/admin/students" method="POST">
                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="f_name" class="form-control" value="<%= oldInput.f_name %>" id="fname" placeholder="Enter First Name" required />
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                        <input type="text" name="l_name" class="form-control" value="<%= oldInput.l_name %>" id="lname" placeholder="Enter Last Name" required />
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">DOB</label>
                    <div class="col-sm-10">
                        <input type="date" name="dob" class="form-control" id="dob" min="1999-01-01" max="2030-12-31" value="<%= oldInput.dob %>" placeholder='dd-mm-yyyy' required />
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Blood Group</label>
                    <div class="col-sm-10">
                        <select class='custom-select form-control' name="bloodgrp" id="bloodgrp" required>
                            <option defaultValue='<%= oldInput.bloodgrp %>' value="<%= oldInput.bloodgrp %>"><%= oldInput.bloodgrp %></option>
                            <option value="A+">A+</option>
                            <option value="B+">B+</option>
                            <option value="AB+">AB+</option>
                            <option value="O+">O+</option>
                            <option value="A-">A-</option>
                            <option value="B-">B-</option>
                            <option value="AB-">AB-</option>
                            <option value="O-">O-</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Gender</label>
                    <div class="col-sm-10">
                        <select class='custom-select form-control' name="gender" id="gender" required>
                            <option defaultValue='<%= oldInput.gender %>' value="<%= oldInput.gender %>"><%= oldInput.gender %></option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label class="col-sm-2 col-form-label">Phone No.</label>
                    <div class="col-sm-10">
                        <input type="tel" name="phoneno" pattern="[0-9]{10}" class="form-control" value="<%= oldInput.phoneno %>" id="phoneno" placeholder="12345-67890" required />
                    </div>
                </div>

                <!-- <input type="hidden" name="_csrf" value="<%= //csrfToken %>"> -->

                <div class='d-flex justify-content-center my-3'>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
    
<%- include('./includes/end.ejs') %>
